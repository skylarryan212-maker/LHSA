{
  "name": "lhsa-agent",
  "publisher": "lhsa",
  "displayName": "LHSA",
  "description": "Long Horizon Software Agent (LHSA) for HOOTL engineering.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lhsa.startAgent",
        "title": "LHSA: Open Command Center",
        "category": "LHSA"
      }
    ]
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "lucide-react": "^0.562.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "clsx": "^2.1.1",
    "class-variance-authority": "^0.7.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "react-virtuoso": "^4.6.2",
    "@tanstack/react-virtual": "^3.13.14",
    "next-themes": "^0.4.6",
    "swr": "^2.3.8",
    "rehype-katex": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build:css": "tailwindcss -i src/styles/globals.css -o dist/webview.css --minify",
    "generate:webview:css": "node scripts/generate-webview-css.js",
    "prepare:webview": "npm run build:css && npm run generate:webview:css",
    "compile": "npm run generate:webview:css && npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "22.x",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "esbuild": "^0.24.0",
    "eslint": "^8.35.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.0.0",
    "tailwindcss": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19"
  }
}
