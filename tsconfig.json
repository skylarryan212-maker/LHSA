{
	"compilerOptions": {
		"typeRoots": ["./src/types", "./node_modules/@types"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@lib/*": ["src/lib/*"],
			"@openrouter/sdk": ["src/lib/openrouter-sdk.ts"],
			"openai/resources/chat/completions": ["src/lib/openai-chat.ts"],
			"@supabase/supabase-js": ["src/lib/supabase/ssr-shim.ts"],
			"@/lib/supabase/browser-client": ["src/lib/supabase/browser-client.ts"],
			"next/link": ["src/lib/mock-link.tsx"],
			"next/image": ["src/lib/mock-image.tsx"],
			"next/dynamic": ["src/lib/mock-dynamic.tsx"],
			"next/navigation": ["src/lib/mock-next.tsx"]
		},
		"module": "Node16",
		"target": "ES2022",
		"lib": [
			"ES2022",
			"DOM",
			"DOM.Iterable"
		],
		"jsx": "react-jsx",
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,   /* enable all strict type-checking options */
		"skipLibCheck": true,
		"noImplicitAny": false,
		/* Additional Checks */
		// "noImplicitReturns": true, /* Report error when not all code paths in function return a value. */
		// "noFallthroughCasesInSwitch": true, /* Report errors for fallthrough cases in switch statement. */
		// "noUnusedParameters": true,  /* Report errors on unused parameters. */
	},
	"include": [
		"src"
	],
	"exclude": [
		"public",
		"external_new_client",
		"node_modules"
	]
}
